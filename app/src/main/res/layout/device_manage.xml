<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/lightgray"
    android:fitsSystemWindows="true"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/device_manage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="设备离线，无法进行操作"
            android:textSize="23dp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="当前功率："
            android:textSize="23dp" />

        <FrameLayout
            android:id="@+id/relay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center">

            <Button
                android:id="@+id/energyCount"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="30dp"
                android:background="@mipmap/energycount" />

            <Button
                android:id="@+id/relaySwitch"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center|center_vertical"
                android:background="@mipmap/relayswitch" />

            <Button
                android:id="@+id/energyMonth"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="30dp"
                android:background="@mipmap/monthenergy" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_layout"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="300dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/setTime"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/settime" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="定时" />

            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/usercode_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/username_layout"
            android:layout_marginRight="50dp"
            android:layout_marginTop="300dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/timeDelay"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/time_delay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="延时" />

            >

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>